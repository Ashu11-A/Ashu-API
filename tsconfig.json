{
  "ts-node": {
    // Do not forget to `npm i -D tsconfig-paths`
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "ESNext",                          
    "module": "commonjs",                    
    "lib": ["ESNext"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@/*": ["app/*"]
    },
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}